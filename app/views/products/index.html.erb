<h1>Products</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>SKU</th>
      <th>Name</th>
      <th>NRC Cost</th>
      <th>NRC Price</th>
      <th>MRC Cost</th>
      <th>MRC Price</th>
      <th>Provider</th>
      <th>Category</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.prod_sku %></td>
        <td><%= product.prod_name %></td>
        <td><%= number_to_currency(product.prod_nrc_cost) %></td>
        <td><%= number_to_currency(product.prod_nrc_price) %></td>
        <td><%= number_to_currency(product.prod_mrc_cost) %></td>
        <td><%= number_to_currency(product.prod_mrc_price) %></td>
        <td><%= product.prod_account %></td>
        <td><%= product.product_category.category_name %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>
